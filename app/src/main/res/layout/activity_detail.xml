<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackground"
            android:orientation="vertical"
            tools:context="com.udacity.sandwichclub.DetailActivity">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />

                <ImageView
                    android:id="@+id/image_iv"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/sandwich_picture_content_description"
                    android:scaleType="centerCrop" />

            </RelativeLayout>

            <TextView
                style="@style/sandwich_header"
                android:text="@string/detail_place_of_origin_label" />

            <TextView
                android:id="@+id/origin_tv"
                style="@style/sandwich_details"
                android:text="@string/placeholder_origin" />

            <TextView
                style="@style/sandwich_header"
                android:text="@string/detail_also_known_as_label" />

            <TextView
                android:id="@+id/also_known_tv"
                style="@style/sandwich_details"
                android:text="@string/placeholder_known_as"
                android:textStyle="italic" />

            <TextView
                style="@style/sandwich_header"
                android:text="@string/detail_description_label" />

            <TextView
                android:id="@+id/description_tv"
                style="@style/sandwich_details"
                android:text="@string/placeholder_info" />

            <TextView
                style="@style/sandwich_header"
                android:text="@string/detail_ingredients_label" />


            <TextView
                android:id="@+id/ingredients_tv"
                style="@style/sandwich_details"
                android:layout_width="match_parent"
                android:text="@string/placeholder_ingredients"
                android:textStyle="italic" />

        </LinearLayout>
    </ScrollView>
</layout>