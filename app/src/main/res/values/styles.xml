<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="sandwich_details">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/info_sp</item>
        <item name="android:paddingLeft">@dimen/margins_texts</item>
        <item name="android:paddingRight">@dimen/margins_texts</item>
        <item name="android:layout_marginBottom">@dimen/margins_texts</item>
    </style>

    <style name="sandwich_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margins_texts</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom</item>
        <item name="android:paddingLeft">@dimen/margins_texts</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/titles_sp</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

</resources>
